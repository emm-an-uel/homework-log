<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LogIt" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lighttheme_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryInverse">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/lighttheme_blue</item>

        <item name="colorSurface">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorContainer">?attr/colorPrimaryContainer</item>
        <item name="colorPrimaryContainer">@color/white</item>

        <item name="colorSecondaryContainer">@color/light_gray</item>

        <!-- Status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Action bar -->
        <item name="titleTextColor">@color/black</item>

        <!-- Navigation drawer -->
        <item name="drawerItemColorNormal">@color/black</item>
        <item name="drawerItemColorChecked">@color/white</item>
        <item name="drawerItemBackground">@color/cardview_black</item>
        <item name="drawerBackground">@color/white</item>
    </style>

    <style name="Theme.LogIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LogIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LogIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>