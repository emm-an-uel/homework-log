<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LogIt" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lighttheme_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryInverse">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/lighttheme_blue</item>

        <item name="colorSurface">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorContainer">?attr/colorPrimaryContainer</item>
        <item name="colorPrimaryContainer">@color/white</item>

        <item name="colorSecondaryContainer">@color/light_gray</item>

        <!-- Status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Action bar -->
        <item name="titleTextColor">@color/black</item>
    </style>
</resources>